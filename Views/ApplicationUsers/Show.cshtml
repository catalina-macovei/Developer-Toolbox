@* Afisarea unui profil *@
@{
    ViewBag.Title = "Show";

}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary p-3 rounded-3 text-center mb-5" role="alert">
        @ViewBag.Message
    </div>
}


<br />


<div class="d-flex justify-content-end">

    @if (ViewBag.User.Id == ViewBag.UserCurent || ViewBag.EsteAdmin || ViewBag.EsteModerator)
    {
    <a class="btn btn-success custom-btn mr-10" href="/ApplicationUsers/Edit/@ViewBag.User.Id">Edit Profile</a>
     <a class="btn btn-danger custom-btn position-relative" style="left: 5px;" href="/ApplicationUsers/Delete/@ViewBag.User.Id">Delete Profile</a>
    }
</div>

<hr />

<br />

<h2 class="text-center"> <i class="bi bi-person-fill"></i> @ViewBag.User.FirstName @ViewBag.User.LastName </h2>
<br />
<br />


 

<div class="row">
    <div class="col-sm-9 mb-9">
        <!-- Colapsarea coloanelor pentru ecrane mici și mai mari -->
        <div class="card">
            <div class="card-body">
                <div><i class="bi bi-vector-pen"></i> @ViewBag.User.Description</div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 mb-3">
        <!-- Colapsarea coloanelor pentru ecrane mici și mai mari -->
        <div class="card">
            <div class="card-body">
                <div> 🎉 @ViewBag.User.Birthday 🎂</div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-2 mb-3">
        <!-- Colapsarea coloanelor pentru ecrane mici și mai mari -->
        <div class="card">
            <div class="card-body">
                <div>🏅 <b><a style="font-size: 20px">100</a></b></div>
            </div>
        </div>
    </div>
    <div class="col-sm-10 mb-10">
        <!-- Colapsarea coloanelor pentru ecrane mici și mai mari -->
        <div class="card">
            <div class="card-body">
                <b>Questions Asked: </b> <br />
                <b>Answers Posted: </b>
            </div>
        </div>
    </div>
</div>


