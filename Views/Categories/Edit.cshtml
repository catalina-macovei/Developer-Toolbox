@model Developer_Toolbox.Models.Category


<div class="container py-5">
    <h2 class="text-center">Edit Category</h2>

    <div class="row">
        <div class="col-6 offset-3">
            <form class="d-flex flex-column gap-3 overflow-auto" method="post" enctype="multipart/form-data" action="/Categories/Edit/@Model.Id">
                <div>
                    @Html.Label("CategoryName", "Category Name")

                    @Html.TextBox("CategoryName", null, new { @class = "form-control" })

                    @Html.ValidationMessageFor(m => m.CategoryName, null, new{@class = "text-danger"})

                    <div>
                        <div>
                            <label for="file">Upload Logo</label>
                            <input type="file" id="file" name="file" />
                            @Html.ValidationMessage("Logo", null, new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <button class="btn btn-outline" style="background-color:pink; color:black;" type="submit">Edit Category</button>
            </form>
        </div>
    </div>
</div>








